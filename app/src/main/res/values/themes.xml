<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MealsAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#F57C00</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#FFFBF5</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#333333</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#FF5722</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Material Components specific -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>

