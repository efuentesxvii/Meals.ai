<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Meal Image -->
        <ImageView
            android:id="@+id/ivMealImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_meal_dummy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bookmark/Save Button -->
        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_circle_white_cc"
            android:src="@drawable/ic_bookmark_border"
            android:padding="8dp"
            app:tint="#101828"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Difficulty Badge (Bottom Left of Image) -->
        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Easy"
            android:textColor="#027A48"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_badge_green"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintBottom_toBottomOf="@id/ivMealImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvMealTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="Mediterranean Quinoa Bowl"
            android:textColor="#101828"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivMealImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvMealDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:text="A nutritious bowl packed with quinoa, roasted vegetables, feta cheese, and lemon-tahini"
            android:textColor="#475467"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvMealTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Meta Info Row -->
        <LinearLayout
            android:id="@+id/llMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvMealDesc"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                app:tint="#475467"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="40 min"
                android:textColor="#475467"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_user"
                app:tint="#475467"/>
            <TextView
                android:id="@+id/tvServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4 servings"
                android:textColor="#475467"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_fire"
                app:tint="#475467"/>
            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="420 cal"
                android:textColor="#475467"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Dynamic Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            app:chipSpacing="8dp"
            app:singleLine="false"
            app:layout_constraintTop_toBottomOf="@id/llMeta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cgTags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Plan Meal"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                app:backgroundTint="#FF5722"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_calendar"
                app:iconTint="#FFFFFF"
                app:iconSize="18dp"
                android:paddingVertical="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Details"
                android:textColor="#344054"
                android:textSize="13sp"
                app:backgroundTint="#F2F4F7"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_info"
                app:iconTint="#344054"
                app:iconSize="18dp"
                android:paddingVertical="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:elevation="0dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
