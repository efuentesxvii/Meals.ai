<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivMealImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
             android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_circle_white_transparent"
            android:src="@drawable/ic_delete" 
            app:tint="#D32F2F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Bookmark (Filled) -->
        <ImageButton
            android:id="@+id/btnBookmark"
             android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_circle_white_transparent"
            android:src="@drawable/ic_bookmark_border" 
            app:tint="#FF5722"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            <!-- Should be filled bookmark, but icon naming might vary. Assuming bookmark_border for consistency with prev 
                 or I should use ic_bookmark if I had it. I'll stick to border but colored orange. -->

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_badge_green"
            android:text="Medium"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivMealImage" />

        <TextView
            android:id="@+id/tvMealTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:text="Herb-Grilled Chicken"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/ivMealImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMealDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:text="Juicy chicken breast marinated in herbs and spices, grilled to perfection."
            android:textSize="14sp"
            android:textColor="#757575"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvMealTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/llMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Reuse meta logic -->
            <TextView android:text="45 min" android:drawableStart="@drawable/ic_clock" android:drawablePadding="4dp" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical"/>
            <TextView android:text="4 servings" android:layout_marginStart="16dp" android:drawableStart="@drawable/ic_user" android:drawablePadding="4dp" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical"/>
            <TextView android:text="280 cal" android:layout_marginStart="16dp" android:drawableStart="@drawable/ic_fire" android:drawablePadding="4dp" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="American • Gluten-Free • Dairy-Free"
            android:textSize="12sp"
            android:textColor="#FF5722"
            app:layout_constraintTop_toBottomOf="@id/llMeta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvTags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Plan Meal"
                app:icon="@drawable/ic_calendar"
                android:backgroundTint="#FF5722"
                app:cornerRadius="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Details"
                app:icon="@drawable/ic_info"
                android:textColor="#555555"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
