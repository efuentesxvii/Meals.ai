<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7ED"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="4dp"
                app:tint="#101828"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sparkles"
                app:tint="#FF6900"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Scanned"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#101828"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ivStar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Meal Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMealImage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivMealImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meal_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/nutritionPill" />

                <!-- Nutrition Metrics Overlay - Mobile Optimized 2x2 Grid -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nutritionPill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_margin="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Row 1: Calories -->
                    <ImageView
                        android:id="@+id/ivCalories"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fire"
                        app:tint="#FF6900"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/ivCalories"
                        app:layout_constraintTop_toTopOf="@id/ivCalories" />

                    <TextView
                        android:id="@+id/tvCaloriesLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="kcal Calories"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/tvCalories"
                        app:layout_constraintEnd_toStartOf="@id/ivProtein"
                        app:layout_constraintTop_toTopOf="@id/tvCalories" />

                    <!-- Row 1: Protein -->
                    <ImageView
                        android:id="@+id/ivProtein"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart"
                        app:tint="#E91E63"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivCalories" />

                    <TextView
                        android:id="@+id/tvProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@id/ivProtein"
                        app:layout_constraintTop_toTopOf="@id/ivProtein" />

                    <TextView
                        android:id="@+id/tvProteinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/tvProtein"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvProtein" />

                    <!-- Row 2: Carbs -->
                    <ImageView
                        android:id="@+id/ivCarbs"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lightbulb"
                        app:tint="#FFC107"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivCalories" />

                    <TextView
                        android:id="@+id/tvCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@id/ivCarbs"
                        app:layout_constraintTop_toTopOf="@id/ivCarbs" />

                    <TextView
                        android:id="@+id/tvCarbsLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/tvCarbs"
                        app:layout_constraintEnd_toStartOf="@id/ivFat"
                        app:layout_constraintTop_toTopOf="@id/tvCarbs" />

                    <!-- Row 2: Fat -->
                    <ImageView
                        android:id="@+id/ivFat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_water"
                        app:tint="#2196F3"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivCarbs" />

                    <TextView
                        android:id="@+id/tvFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@id/ivFat"
                        app:layout_constraintTop_toTopOf="@id/ivFat" />

                    <TextView
                        android:id="@+id/tvFatLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/tvFat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvFat" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- AI Analysis Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAIAnalysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cvMealImage">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/ivAIIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sparkles"
                    app:tint="#FF6900"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvAITitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Analysis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/ivAIIcon"
                    app:layout_constraintTop_toTopOf="@id/ivAIIcon"
                    app:layout_constraintBottom_toBottomOf="@id/ivAIIcon" />

                <TextView
                    android:id="@+id/tvMealIdentification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#101828"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAITitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNutritionalSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvMealIdentification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvHealthScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Score"
                    android:textSize="14sp"
                    android:textColor="#101828"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNutritionalSummary"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressHealthScore"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    app:indicatorColor="#FF6900"
                    app:trackColor="#FFE5D9"
                    app:trackCornerRadius="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHealthScoreLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvHealthScore" />

                <TextView
                    android:id="@+id/tvHealthScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6900"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/progressHealthScore"
                    app:layout_constraintBottom_toBottomOf="@id/progressHealthScore"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/tvHealthScoreDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/progressHealthScore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recommendations Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cvAIAnalysis">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/ivRecIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sparkles"
                    app:tint="#FF6900"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvRecTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/ivRecIcon"
                    app:layout_constraintTop_toTopOf="@id/ivRecIcon"
                    app:layout_constraintBottom_toBottomOf="@id/ivRecIcon" />

                <!-- Recommendation 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRec1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF7ED"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvRecTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivCheck1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_rounded"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRec1Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#101828"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/ivCheck1"
                            app:layout_constraintTop_toTopOf="@id/ivCheck1"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvRec1Desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/tvRec1Title"
                            app:layout_constraintStart_toStartOf="@id/tvRec1Title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Recommendation 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRec2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF7ED"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/cvRec1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivCheck2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_rounded"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRec2Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Consider adding vegetables"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#101828"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/ivCheck2"
                            app:layout_constraintTop_toTopOf="@id/ivCheck2"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvRec2Desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Adding a side of leafy greens would boost the fiber and micronutrient content."
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/tvRec2Title"
                            app:layout_constraintStart_toStartOf="@id/tvRec2Title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Recommendation 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRec3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF7ED"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/cvRec2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivCheck3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_rounded"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRec3Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Portion size looks perfect"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#101828"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/ivCheck3"
                            app:layout_constraintTop_toTopOf="@id/ivCheck3"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvRec3Desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="This serving size aligns well with your daily calorie goals and macronutrient targets."
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/tvRec3Title"
                            app:layout_constraintStart_toStartOf="@id/tvRec3Title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMeal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save to Meal Log"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_primary_gradient"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="28dp"
                app:layout_constraintTop_toBottomOf="@id/cvRecommendations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <!-- Loading overlay (50% opacity) -->
        <FrameLayout
            android:id="@+id/flLoadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="true"
            android:elevation="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Spinner sits on top of overlay; elevation set programmatically too -->
            <ProgressBar
                android:id="@+id/progressOverlay"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:elevation="17dp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
