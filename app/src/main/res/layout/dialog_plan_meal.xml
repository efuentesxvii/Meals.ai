<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan Meal: Herb-Grilled Chicken"
            android:textColor="#101828"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Date"
            android:textColor="#344054"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_field"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:focusable="false"
            android:hint="Select date"
            android:textColorHint="#666666"
            android:textColor="#344054"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Meal Type"
            android:textColor="#344054"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 2x2 Grid for buttons using nested Linears for simplicity and even distribution -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTypeBreakfast"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_field"
                android:text="Breakfast"
                android:textAllCaps="false"
                android:textColor="#344054"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTypeLunch"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_gradient_orange"
                android:text="Lunch"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTypeDinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_field"
                android:text="Dinner"
                android:textAllCaps="false"
                android:textColor="#344054"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTypeSnack"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input_field"
                android:text="Snack"
                android:textAllCaps="false"
                android:textColor="#344054"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#344054"
                app:cornerRadius="12dp"
                app:strokeColor="#D0D5DD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogAdd"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Add to Plan"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
