<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBF5"
    tools:context=".ui.grocery.GroceryListFragment">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:background="@drawable/bg_gradient_orange">

            <ImageView
                android:id="@+id/ivLIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cart" 
                app:tint="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Grocery List"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivLIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivLIcon"
                app:layout_constraintStart_toEndOf="@id/ivLIcon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="No items yet. Plan some meals to get started!"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/ivLIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content (Empty State) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cvHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">
            
            <ImageView
                android:id="@+id/ivBigCart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cart"
                app:tint="#D0D5DD"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
                
            <TextView
                android:id="@+id/tvEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Your grocery list is empty"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#101828"
                app:layout_constraintTop_toBottomOf="@id/ivBigCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvEmptyDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"
                android:text="Plan some meals to automatically generate a shopping list with all the ingredients you need."
                android:gravity="center"
                 android:textColor="#475467"
                 android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvEmptyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFF4ED"
                android:padding="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvEmptyDesc">
                
                <ImageView
                    android:src="@drawable/ic_lightbulb"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="#F79009"/>
                    
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Tip: Go to 'Meal Plan' to add meals to your calendar"
                    android:textColor="#B54708"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- List View (Hidden) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGrocery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone"
            tools:listitem="@layout/item_grocery"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
