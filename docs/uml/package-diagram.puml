@startuml package-diagram
package "ui" {
  [mobile]
  [web]
}

package "api" {
  [controllers]
  [dto]
  [middleware]
}

package "domain" {
  [entities]
  [value_objects]
}

package "services" {
  [auth]
  [profile]
  [meal_log]
  [analysis]
  [nutrition]
  [recommendation]
  [recipe]
  [grocery]
}

package "persistence" {
  [repositories]
  [sql_migrations]
}

package "integrations" {
  [vision_ai_client]
  [nutrition_api_client]
  [storage_client]
}

package "security" {
  [jwt]
  [roles_permissions]
}

ui ..> api
api ..> services
services ..> domain
services ..> persistence
persistence ..> domain
services ..> integrations
api ..> security
services ..> security

@enduml
