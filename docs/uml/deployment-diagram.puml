@startuml deployment-diagram
node "User Device" as Device {
  artifact "Meals.ai Mobile App" as App
}

node "Web Browser" as Browser {
  artifact "Meals.ai Web UI" as WebUI
}

node "Cloud / Hosting" as Cloud {
  node "Load Balancer" as LB
  node "App Server Cluster" as AppSrv {
    artifact "API Gateway" as APIGW
    artifact "Services\n(Auth, Profile, Log, Reco, Recipe, Grocery)" as Services
  }
  node "AI Compute" as AIHost {
    artifact "Meal Analysis Service" as AnalysisSvc
  }
  database "Managed SQL DB" as DB
  node "Object Storage" as Obj
}

node "3rd Party Providers" as ThirdParty {
  node "Vision AI API" as Vision
  node "Nutrition Data API" as NutritionAPI
}

Device --> LB
Browser --> LB
LB --> APIGW
APIGW --> Services
APIGW --> AnalysisSvc

Services --> DB
AnalysisSvc --> DB
AnalysisSvc --> Obj

AnalysisSvc --> Vision
Services --> NutritionAPI

@enduml
